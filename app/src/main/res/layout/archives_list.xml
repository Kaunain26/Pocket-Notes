<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="?attr/selectableItemBackground"
    android:elevation="8dp"
    app:cardElevation="10dp"
    tools:targetApi="lollipop">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_margin">

        <RelativeLayout
            android:id="@+id/archive_note_item_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            >

<!--            <ImageView-->
<!--                android:id="@+id/deleteTittle"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:padding="8dp"-->
<!--                android:src="@drawable/ic_baseline_delete_sweep_24"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toEndOf="@+id/text_view_title"-->
<!--                app:layout_constraintTop_toTopOf="parent" />-->

            <TextView
                android:id="@+id/archive_text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:paddingTop="5dp"
                android:background="?attr/selectableItemBackground"
                android:ellipsize="end"
                android:text="Title"

                android:fontFamily="sans-serif-condensed"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="17sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/archive_text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="?attr/selectableItemBackground"
                android:ellipsize="end"
                android:layout_marginBottom="10dp"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="15sp"
                android:layout_below="@+id/archive_text_view_title"
                />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>